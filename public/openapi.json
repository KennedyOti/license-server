{
  "openapi": "3.0.3",
  "info": {
    "title": "License Server API",
    "description": "API for managing software licenses with product and feature-level entitlements",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Development server"
    }
  ],
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/companies/me": {
      "get": {
        "summary": "Get company information",
        "responses": {
          "200": {
            "description": "Company information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Company"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update company webhook settings",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CompanyUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Company updated successfully"
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "List products",
        "responses": {
          "200": {
            "description": "List of products",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a product",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created"
          }
        }
      }
    },
    "/products/{productId}": {
      "get": {
        "summary": "Get product details",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product details"
          }
        }
      },
      "put": {
        "summary": "Update product",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product updated"
          }
        }
      },
      "delete": {
        "summary": "Delete product",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product deleted"
          }
        }
      }
    },
    "/validate": {
      "post": {
        "summary": "Validate license and get entitlements",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ValidationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "License validation result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/public-key": {
      "get": {
        "summary": "Get public key for JWT validation",
        "security": [],
        "responses": {
          "200": {
            "description": "Public key",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    },
    "schemas": {
      "Company": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "name": {"type": "string"},
          "webhook_url": {"type": "string", "nullable": true},
          "metadata": {"type": "object", "nullable": true}
        }
      },
      "CompanyUpdate": {
        "type": "object",
        "properties": {
          "webhook_url": {"type": "string", "nullable": true},
          "webhook_secret": {"type": "string", "nullable": true},
          "metadata": {"type": "object", "nullable": true}
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "company_id": {"type": "integer"},
          "name": {"type": "string"},
          "metadata": {"type": "object", "nullable": true}
        }
      },
      "ProductCreate": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {"type": "string"},
          "metadata": {"type": "object", "nullable": true}
        }
      },
      "ProductUpdate": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {"type": "string"},
          "metadata": {"type": "object", "nullable": true}
        }
      },
      "ValidationRequest": {
        "type": "object",
        "required": ["company_id", "external_user_id", "product_id"],
        "properties": {
          "company_id": {"type": "integer"},
          "external_user_id": {"type": "string"},
          "product_id": {"type": "integer"}
        }
      },
      "ValidationResponse": {
        "type": "object",
        "properties": {
          "license_valid": {"type": "boolean"},
          "status": {"type": "string"},
          "expiry": {"type": "string", "format": "date-time"},
          "plan_features": {"type": "array", "items": {"type": "string"}},
          "feature_overrides": {"type": "object", "nullable": true},
          "combined_feature_entitlements": {"type": "array", "items": {"type": "string"}},
          "jwt_token": {"type": "string"}
        }
      }
    }
  }
}